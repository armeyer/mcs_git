#!/bin/bash

for pdf_file
do
    echo $pdf_file
    basename=${pdf_file%.tex}

    svn add $basename.pdf
    svn commit -m "Added $basename.pdf to repository" $basename.pdf

    pdfcrop $basename.pdf
    mv $basename-crop.pdf $basename.pdf

    svn commit -m "Cropped $basename.pdf" $basename.pdf
done
